<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Blog</title>
  </head>
  <body>
    <h1>Benvenuto nel blog</h1>
    <button class="nuovo-post" id="newPostBtn">
      <a href="/new">Nuovo Post</a>
    </button>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
      </li>

      <% }); %>
    </ul>
  </body>
</html>
